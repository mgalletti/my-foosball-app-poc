{
  "name": "my-foosball-app-poc",
  "version": "1.0.0",
  "description": "A foosball application POC",
  "main": "src/server.ts",
  "type": "module",
  "scripts": {
    "build": "npm run format && tsc --build --verbose && cp src/openapi.yaml dist/",
    "start": "node dist/server.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "clean": "npx jest --clearCache && rm -rf dist",
    "test": "npx jest --config=jest.config.js --verbose --runInBand",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "format:all": "run-s format db:format",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "db:generate": "prisma generate",
    "db:format": "prisma format",
    "db:push": "prisma db push",
    "db:force-push": "prisma db push --force-reset",
    "db:hard-reset": "run-s db:generate db:force-push db:mock-data",
    "db:mock-data": "sqlite3 db/sql/foosball.db < db/sql/mock_data.sql",
    "release": "run-s clean db:push test format:all lint build  && echo '\\033[1;32m\nAll clear and good to go! ðŸš€\\033[0m'",
    "dev-setup": "run-p db:generate lint format"
  },
  "keywords": [
    "foosball",
    "express",
    "node"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@apollo/server": "^4.12.2",
    "@as-integrations/express4": "^1.1.0",
    "@prisma/client": "^6.13.0",
    "cors": "^2.8.5",
    "dynamoose": "^3.3.0",
    "express": "^4.18.2",
    "express-openapi": "^12.1.3",
    "graphql": "^16.11.0",
    "mongoose": "^8.15.2",
    "pino": "^9.7.0",
    "pino-http": "^10.5.0",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.0.1",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.6.1",
    "prisma": "^6.13.0",
    "supertest": "^7.1.3",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
